import matplotlib.pyplot as plt 
x = [1, 2, 3, 4, 5] 
y = [5, 1, 4, 8, 4] 
# Create a figure with 3 subplots (1 row, 3 columns) 
plt.figure(figsize=(9, 6)) 
# Line Plot 
plt.subplot(1, 3, 1) 
plt.plot(x, y, color='green') 
plt.title("Line Plot" 
# Bar Plot 
plt.subplot(1, 3, 2) 
plt.bar(x, y, color='blue') 
plt.title("Bar Plot")
# Scatter Plot 
plt.subplot(1, 3, 3) 
plt.scatter(x, y, color='red') 
plt.title("Scatter Plot") 
plt.tight_layout() 
plt.show() 
